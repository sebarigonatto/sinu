@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdPersona)
    @Html.HiddenFor(m => m.IdInscripcion)
    <h4 class="font-weight-bold" style="text-align:center">Detalles de la Inscripcion a Entrevistar</h4>
    <div class="card" style=" text-align: -webkit-center;">
        <div class="card-header">
            <h5 class="font-weight-bold" style="text-align:left"><u>N° de pre-inscripcion:@Model.IdInscripcion</u></h5>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.DNI, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.DNI, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.DNI, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.Genero, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Celular, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.Celular, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.ComoSeEntero, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.ComoSeEntero, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.ComoSeEntero, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Preferencia, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.Preferencia, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.Preferencia, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.FechaRegistro, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Inscripto_En, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.Inscripto_En, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.Inscripto_En, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.IdInscripcion, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.IdInscripcion, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.IdInscripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.FechaEntrevista, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col">
                        @Html.EditorFor(model => model.FechaEntrevista, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.FechaEntrevista, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group" id="Ocul4" hidden>
                <hr />
                <div class="alert alert-primary" role="alert">
                    Para poder restaurar a un postulante debe volverlo a la etapa anterior
                </div>
            </div>
        </div><!--Aqui finaliza la card body-->
        <div class="card-footer clearfix">
            <div class="container-fluid">

                <div class="form-group row mb-0">
                    <div class="col-md-3">
                        <div class="m-1">
                            @Html.ActionLink("Cerrar", "Index", null, new { @class = "btn btn-dark btn-lg w-75" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row float-right">
                            <div id="Ocul3" hidden data-toggle="modal" data-target="#modal3">
                                <button type="button" class="btn btn-success btn-lg m-1">Volver a Etapa anterior</button>
                            </div>
                            <div id="Ocul2" hidden data-toggle="modal" data-target="#modal2">
                                <button type="button" class="btn btn-danger btn-lg m-1">No Postular</button>
                            </div>
                            <div id="Ocul1" hidden data-toggle="modal" data-target="#modal1">
                                <button type="button" class="btn btn-success btn-lg m-1">Postular</button>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div><!--Aqui finaliza la class "card"-->
    <br />
    <div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">SINU</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Esta Seguro que desea realizar la accion sobre el postulante<br />
                    @Model.Apellido @Model.Nombres
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" value="Postular" name="botonPostular">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">SINU</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Esta Seguro que desea realizar la accion sobre el postulante<br />
                    @Model.Apellido @Model.Nombres
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" value="No Postular" name="botonPostular">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">SINU</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Esta Seguro que desea realizar la accion sobre el postulante<br />
                    @Model.Apellido @Model.Nombres
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" value="Volver" name="botonPostular">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script type="text/javascript">
       $(document).ready(function () {
           var a = '@ViewBag.Estado'
           if (a != "No Postulado") {
               $("#Ocul1").removeAttr("hidden");
               $("#Ocul2").removeAttr("hidden");
           }
            else {
               $("#Ocul3").removeAttr("hidden");
               $("#Ocul4").removeAttr("hidden");

           };
       });

    </script>
}
